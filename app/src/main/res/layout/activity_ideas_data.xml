<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".IdeasDataActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="10sp"
        android:id="@+id/activity_ideas_data_ll">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="45sp"
            android:layout_weight="1"
            android:background="@color/black"
            android:src="@drawable/baseline_delete_24"
            android:id="@+id/activity_ideas_data_deleteIB"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="45sp"
            android:layout_weight="1"
            android:background="@color/black"
            android:src="@drawable/baseline_done_24"
            android:id="@+id/activity_ideas_data_applyIB"
            />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_ideas_data_ll"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_ideas_data_task_fragment"
            android:layout_marginTop="5sp"
            android:layout_marginHorizontal="10sp"
            android:hint="@string/activity_ideas_data_ideas_fragment_text"
            android:textColor="@color/projectColor"
            android:textColorHint="@color/hintColor"
            android:backgroundTint="@color/projectColor"/>
    </ScrollView>
</RelativeLayout>